{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env*",
    "tsconfig*.json",
    "eslint.config.*",
    "vite.config.*",
    "pyproject.toml"
  ],
  "tasks": {
    "bootstrap": {
      "inputs": ["package.json", "pnpm-lock.yaml", "pyproject.toml", "poetry.lock"],
      "outputs": ["node_modules/**", "dist/**", ".venv/**"],
      "cache": true,
      "dependsOn": ["^bootstrap"]
    },
    "build": {
      "dependsOn": ["bootstrap", "^bootstrap", "^build"],
      "inputs": ["src/**", "tsconfig*.json", "vite.config.*"],
      "outputs": ["dist/**", "build/**"],
      "cache": true
    },
    "dev": {
      "dependsOn": ["^bootstrap"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^bootstrap"],
      "inputs": ["src/**", "eslint.config.*"],
      "cache": true
    },
    "lint:fix": {
      "dependsOn": ["^bootstrap"],
      "inputs": ["src/**", "eslint.config.*"],
      "cache": false
    },
    "test": {
      "dependsOn": ["^bootstrap"],
      "inputs": ["src/**", "test/**", "tests/**", "vitest.config.*"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "test:coverage": {
      "dependsOn": ["^bootstrap"],
      "inputs": ["src/**", "test/**", "tests/**", "vitest.config.*"],
      "outputs": ["coverage/**", "htmlcov/**"],
      "cache": true
    },
    "test:watch": {
      "dependsOn": ["^bootstrap"],
      "cache": false,
      "persistent": true
    },
    "type-check": {
      "dependsOn": ["^bootstrap"],
      "inputs": ["src/**", "tsconfig*.json"],
      "cache": true
    },
    "clean": {
      "cache": false
    }
  }
}
