{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "bootstrap": {
      "dependsOn": [],
      "outputs": [],
      "cache": false,
      "env": ["NODE_ENV"]
    },
    "init": {
      "dependsOn": ["^bootstrap"],
      "outputs": []
    },
    "build": {
      "dependsOn": ["^bootstrap"],
      "outputs": ["dist/**", ".next/**", "build/**"],
      "cache": true
    },
    "lint": {
      "dependsOn": ["^bootstrap"],
      "outputs": []
    },
    "dev": {
      "dependsOn": ["^bootstrap"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^bootstrap"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "format": {
      "dependsOn": ["^bootstrap"],
      "outputs": []
    }
  }
}
