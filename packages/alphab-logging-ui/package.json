{
  "name": "@alphab/logging-ui",
  "version": "0.1.0",
  "description": "Simple, elegant logging for TypeScript/JavaScript frontends",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "bootstrap": "rm -rf node_modules && pnpm install && pnpm run build",
    "build": "tsc --project tsconfig.app.json",
    "dev": "tsc --project tsconfig.app.json --watch",
    "clean": "rm -rf dist",
    "test": "vitest",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --fix",
    "preview": "echo \"No preview for library package\""
  },
  "keywords": [
    "logging",
    "frontend",
    "typescript",
    "structured-logging",
    "browser"
  ],
  "author": "Alphab <info@alphab.dev>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.18.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
