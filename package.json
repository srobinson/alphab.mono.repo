{
  "name": "@alphab/monorepo",
  "version": "0.1.0",
  "description": "Alphab Monorepo - Multi-project workspace with shared packages",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "// Turbo scripts": "",
    "// bootstrap": "turbo run bootstrap && turbo run init",
    "bootstrap": "turbo run bootstrap",
    "init": "turbo run init",
    "setup": "turbo run setup",
    "dev": "turbo dev",
    "dev:all": "concurrently \"pnpm run dev:particle0\" \"pnpm run dev:particle0-ui\"",
    "dev:particle0": "cd packages/particle0 && python uvicorn particle0.main:app --reload --port 8000",
    "dev:particle0-ui": "cd packages/particle0-ui && pnpm run dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "format": "turbo format",
    "test": "turbo test",
    "// Package-specific scripts": "",
    "format:particle0": "cd packages/particle0 && black .",
    "prepare": "husky install",
    "format:alphab-logto": "cd packages/alphab-logto && black .",
    "test:alphab-logto": "cd packages/alphab-logto && python -m pytest",
    "test:alphab-logto-ui": "cd packages/alphab-logto-ui && pnpm run test"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "turbo": "^2.5.4"
  },
  "lint-staged": {
    "packages/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "packages/**/*.py": [
      "black",
      "flake8"
    ]
  }
}
