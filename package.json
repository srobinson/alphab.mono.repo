{
  "name": "@alphab/monorepo",
  "version": "0.1.0",
  "description": "Alphab Monorepo - Multi-project workspace with shared packages",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "clean": "./packages/alphab-scripts/bin/alphab-turbo clean",
    "clean:deep": "./packages/alphab-scripts/bin/alphab-turbo clean && rm -rf pnpm-lock.yaml node_modules",
    "bootstrap": "./packages/alphab-scripts/bin/alphab-turbo run bootstrap",
    "dev": "./packages/alphab-scripts/bin/alphab-turbo dev --parallel",
    "dev:ui": "./packages/alphab-scripts/bin/alphab-turbo dev --filter='*-ui'",
    "dev:api": "./packages/alphab-scripts/bin/alphab-turbo dev --filter='!*-ui'",
    "dev:particle0": "./packages/alphab-scripts/bin/alphab-turbo dev --filter='@alphab.project/particle0*'",
    "build": "./packages/alphab-scripts/bin/alphab-turbo build",
    "build:ui": "./packages/alphab-scripts/bin/alphab-turbo build --filter='*-ui'",
    "build:api": "./packages/alphab-scripts/bin/alphab-turbo build --filter='!*-ui'",
    "lint": "./packages/alphab-scripts/bin/alphab-turbo lint",
    "lint:fix": "./packages/alphab-scripts/bin/alphab-turbo lint:fix",
    "format": "./packages/alphab-scripts/bin/alphab-turbo format",
    "type-check": "./packages/alphab-scripts/bin/alphab-turbo type-check",
    "test": "./packages/alphab-scripts/bin/alphab-turbo test",
    "test:coverage": "./packages/alphab-scripts/bin/alphab-turbo test:coverage",
    "test:watch": "./packages/alphab-scripts/bin/alphab-turbo test:watch",
    "test:ui": "./packages/alphab-scripts/bin/alphab-turbo test --filter='*-ui'",
    "test:api": "./packages/alphab-scripts/bin/alphab-turbo test --filter='!*-ui'",
    "prepare": "husky install",
    "graph": "./packages/alphab-scripts/bin/alphab-turbo run build --graph=dependency-graph.html",
    "dry-run": "./packages/alphab-scripts/bin/alphab-turbo run build --dry-run"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "devDependencies": {
    "@turbo/gen": "^2.5.4",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "turbo": "^2.5.4"
  },
  "lint-staged": {
    "packages/**/*.{js,jsx,ts,tsx}": [
      "turbo lint:fix --filter='{packages/**}'",
      "turbo format --filter='{packages/**}'"
    ],
    "apps/**/*.{js,jsx,ts,tsx}": [
      "turbo lint:fix --filter='{apps/**}'",
      "turbo format --filter='{apps/**}'"
    ],
    "**/*.py": [
      "black",
      "flake8"
    ]
  },
  "turbo": {
    "extends": [
      "//"
    ]
  }
}
