{
  "name": "particle0",
  "version": "0.1.0",
  "description": "Alphab Molecule/Vault POC - Monorepo for AI-powered platform",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev:frontend": "cd frontend && pnpm run dev",
    "dev:backend": "cd backend && python -m uvicorn app.main:app --reload --port 8000",
    "dev:all": "concurrently \"pnpm run dev:frontend\" \"pnpm run dev:backend\"",
    "build:frontend": "cd frontend && pnpm run build",
    "lint:frontend": "cd frontend && pnpm run lint",
    "lint:backend": "cd backend && flake8",
    "lint": "pnpm run lint:frontend && pnpm run lint:backend",
    "format:frontend": "cd frontend && pnpm run format",
    "format:backend": "cd backend && black .",
    "format": "pnpm run format:frontend && pnpm run format:backend",
    "test:frontend": "cd frontend && pnpm run test",
    "test:backend": "cd backend && python -m pytest",
    "test": "pnpm run test:frontend && pnpm run test:backend",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": [
      "cd frontend && eslint --fix",
      "cd frontend && prettier --write"
    ],
    "backend/**/*.py": [
      "black",
      "flake8"
    ]
  }
}
